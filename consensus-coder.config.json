{
  "skillId": "consensus-coder",
  "version": "1.0.0",
  "description": "Multi-model consensus coding workflow - debate system for generating high-quality code through orchestrated AI deliberation",
  "maxDebates": 100,
  "maxRounds": 5,
  "votingThreshold": 75,
  "uncertaintyThreshold": 30,
  "requestTimeout": 60000,
  "retryConfig": {
    "maxRetries": 3,
    "baseDelayMs": 1000,
    "maxDelayMs": 60000,
    "backoffMultiplier": 2
  },
  "tools": {
    "preferredContextEngine": "auggie",
    "reviewers": ["gemini", "codex"],
    "votingWeights": {
      "auggie": 1.5,
      "gemini": 1.0,
      "codex": 1.0
    },
    "adapters": {
      "auggie": {
        "path": "auggie",
        "timeout": 300000
      },
      "gemini": {
        "model": "gemini-2.0-flash",
        "timeout": 60000
      },
      "codex": {
        "model": "gpt-4o",
        "timeout": 60000
      },
      "claude-code": {
        "model": "claude-sonnet-4-20250514",
        "timeout": 60000
      },
      "pi": {
        "timeout": 60000
      },
      "opencode": {
        "timeout": 60000
      },
      "llama": {
        "model": "llama-3.1-70b",
        "timeout": 60000
      }
    }
  },
  "models": {
    "opus": "anthropic/claude-opus-4-5",
    "gemini": "google/gemini-2-5-flash",
    "codex": "anthropic/claude-opus-4-5"
  },
  "persistence": {
    "basePath": "~/.clawdbot/consensus-debates",
    "maxDebatesKept": 100,
    "autoCleanupDaysOld": 30,
    "atomicWrites": true
  },
  "logging": {
    "level": "info",
    "format": "text",
    "outputPath": "~/.clawdbot/consensus-coder/logs"
  }
}
